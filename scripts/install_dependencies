#!/bin/bash
cd /home/ec2-user/ruby-on-rails
# Install prerequisites
yum install -y gcc openssl-devel libyaml-devel libffi-devel readline-devel zlib-devel gdbm-devel ncurses-devel ruby-devel gcc-c++ jq git

# Import key
curl -sSL https://rvm.io/mpapis.asc | gpg2 --import -

# Install RVM
curl -sSL https://get.rvm.io | bash -s stable --ruby
source /etc/profile.d/rvm.sh
rvm requirements
rvm install 2.3.0

gem install rails
bundle install
bundle exec passenger start -p 80 -a 0.0.0.0 -d
